{% extends 'base1.html.twig' %}

{% block title %}Inscription index{% endblock %}

{% block body %}
{% include('navbarVertical.html.twig') %} 
    <h1>Liste des inscriptions</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>Prenom</th>
                <th>E-mail</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
              
                <td>{{ inscription.nom }}</td>
                <td>{{ inscription.prenom }}</td>
                <td>{{ inscription.email }}</td>
{#                <td>#}
{#                    <a href="{{ path('inscription_edit', {'id': inscription.id}) }}"><button class="btn">Modifier</button></a>#}
{#                </td>#}
                <td>
                    {{ include('inscription/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune inscription pour le moment!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <br>
        {{ knp_pagination_render(inscriptions) }}

{% endblock %}
