{% extends 'base1.html.twig' %}

{% block title %}Messages reçus{% endblock %}

{% block body %}
 {% include('navbarVertical.html.twig') %}  
    <h1>Messages reçus</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Message</th>
                <th colspan="2">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
               
                <td>{{ message.nom }}</td>
                <td>{{ message.prenom }}</td>
                <td>{{ message.email }}</td>
                <td>{{ message.message }}</td>
                <td>
                   {{ include('messages/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">aucun message pour le moment!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     <br>
        {{ knp_pagination_render(messages) }}
{% endblock %}
