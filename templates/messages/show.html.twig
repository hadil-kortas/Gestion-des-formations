{% extends 'base1.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
 {% include('navbarVertical.html.twig') %}  
    <h1>Messages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ message.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ message.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ message.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('messages_index') }}">retour vers la liste des messages</a>
    {{ include('messages/_delete_form.html.twig') }}
{% endblock %}
